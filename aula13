//exercicio 6
function podeEstudarNaFaculdade(ensinomedio, idade, cursandofaculdade){
    if(ensinomedio == "sim" && idade >= 18 && cursandofaculdade == "nao"){
        return "Pode estudar na faculdade";
    }else { return "Nao pode estudar na faculdade"; }
}
console.log(podeEstudarNaFaculdade(prompt("Conclui o ensino medio?").toLocaleLowerCase(),
Number(prompt("sua idade")),prompt("Esta cursando outra faculdade?").toLocaleLowerCase()));
